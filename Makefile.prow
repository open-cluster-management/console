-include /opt/build-harness/Makefile.prow

.PHONY: build
build:
	npm run backend:ci
	npm run frontend:ci

.PHONY: install
install:
	npm ci
	npm run backend:ci
	npm run frontend:ci

.PHONY: check
check:
	npm run backend:check
	npm run frontend:check


.PHONY: lint
lint:
	npm run backend:lint
	npm run frontend:lint


.PHONY: unit-tests
unit-tests:
	if [ ! -d "test-output" ]; then \
		mkdir test-output; \
	fi
	npm run backend:lint
	npm run frontend:lint

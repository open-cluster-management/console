{
    "name": "console-frontend",
    "version": "0.0.1",
    "private": true,
    "dependencies": {
        "@apollo/client": "^3.2.3",
        "@kubernetes/client-node": "^0.12.2",
        "@open-cluster-management/ui-components": "^0.1.16",
        "@patternfly/react-core": "^4.63.3",
        "@patternfly/react-table": "^4.18.14",
        "@types/react": "^16.9.52",
        "@types/react-dom": "^16.9.8",
        "@types/react-router-dom": "^5.1.6",
        "@types/yamljs": "^0.2.31",
        "axios": "^0.20.0",
        "graphql": "^15.3.0",
        "graphql-tag": "^2.11.0",
        "i18next": "^19.8.2",
        "i18next-browser-languagedetector": "^6.0.1",
        "i18next-http-backend": "^1.0.21",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-i18next": "^11.7.3",
        "react-router-dom": "^5.2.0",
        "react-scripts": "3.4.3",
        "typescript": "^4.0.3",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "1.17.10",
        "@graphql-codegen/introspection": "1.18.0",
        "@graphql-codegen/typescript": "1.17.10",
        "@graphql-codegen/typescript-operations": "1.17.8",
        "@graphql-codegen/typescript-react-apollo": "^2.0.7",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.0.4",
        "@testing-library/user-event": "^12.1.7",
        "@types/jest": "^26.0.14",
        "@types/node": "^14.11.8",
        "jest-junit": "^12.0.0",
        "prettier": "^2.1.2"
    },
    "scripts": {
        "start": "npm run generate && REACT_APP_BACKEND=http://localhost:4000 react-scripts start",
        "build": "npm run generate && REACT_APP_BACKEND=http://localhost:3000 react-scripts build",
        "test": "JEST_JUNIT_OUTPUT_DIR=coverage react-scripts test --all --watchAll=false --ci --coverage --reporters=default --reporters=jest-junit --coverageReporters=lcov --coverageReporters=html --coverageReporters=text --coverageReporters=text-summary --collectCoverageFrom=!**/*.d.ts",
        "test:watch": "npm run generate && react-scripts test",
        "lint": "eslint src --ext .ts,.tsx --max-warnings=0",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "check": "prettier --check src/**/*.tsx **/*.json",
        "check:fix": "prettier --write src/**/*.tsx **/*.json",
        "generate": "graphql-codegen --config src/graphql/codegen.yml",
        "generate:watch": "graphql-codegen -w -s --config src/graphql/codegen.yml",
        "update": "rm -rf package-lock.json node_modules && npx npm-check-updates -u && npm install && npm audit fix && npm dedup && npm test && npm run lint && npm run check"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/*.d.ts",
            "!src/index.tsx",
            "!src/serviceWorker.ts",
            "!<rootDir>/node_modules/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 0,
                "functions": 0,
                "lines": 0,
                "statements": 0
            }
        },
        "coverageReporters": [
            "text",
            "text-summary",
            "html",
            "lcov"
        ],
        "watchPathIgnorePatterns": [
            "node_modules",
            "coverage"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}

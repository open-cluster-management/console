{
    "name": "console-frontend",
    "version": "0.0.1",
    "private": true,
    "homepage": "/cluster-management/",
    "proxy": "http://localhost:4000",
    "dependencies": {
        "@kubernetes/client-node": "^0.13.0",
        "@open-cluster-management/ui-components": "^0.1.64",
        "@patternfly/react-core": "^4.75.2",
        "@patternfly/react-table": "^4.19.5",
        "@types/moment": "^2.13.0",
        "@types/react": "^16.9.56",
        "@types/react-dom": "^16.9.9",
        "@types/react-router-dom": "^5.1.6",
        "@types/yamljs": "^0.2.31",
        "axios": "^0.21.0",
        "i18next": "^19.8.3",
        "i18next-browser-languagedetector": "^6.0.1",
        "i18next-http-backend": "^1.0.21",
        "moment": "^2.29.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-i18next": "^11.7.3",
        "react-router-dom": "^5.2.0",
        "react-scripts": "4.0.0",
        "typescript": "^4.0.5",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.11.6",
        "@testing-library/react": "^11.1.2",
        "@testing-library/user-event": "^12.2.2",
        "@types/jest": "^26.0.15",
        "@types/node": "^14.14.7",
        "jest-environment-jsdom-sixteen": "^1.0.3",
        "jest-junit": "^12.0.0",
        "nock": "^13.0.5",
        "prettier": "^2.1.2"
    },
    "scripts": {
        "start": "REACT_APP_BACKEND=http://localhost:4000 react-scripts start",
        "build": "REACT_APP_BACKEND='' react-scripts build",
        "test": "JEST_JUNIT_OUTPUT_DIR=coverage react-scripts test --all --watchAll=false --ci --coverage --reporters=default --reporters=jest-junit --coverageReporters=lcov --coverageReporters=html --coverageReporters=text --coverageReporters=text-summary --collectCoverageFrom=!**/*.d.ts --env=jest-environment-jsdom-sixteen",
        "test:watch": "react-scripts test",
        "lint": "eslint src --ext .ts,.tsx --max-warnings=0",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "check": "prettier --check src/**/*.tsx src/**/*.ts",
        "check:fix": "prettier --write src/**/*.tsx src/**/*.ts",
        "update": "rm -rf package-lock.json node_modules && npx npm-check-updates -u && npm install && npm audit fix && npm dedup && npm test && npm run lint && npm run check"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/*.d.ts",
            "!<rootDir>/node_modules/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 0,
                "functions": 0,
                "lines": 0,
                "statements": 0
            }
        },
        "coverageReporters": [
            "text",
            "text-summary",
            "html",
            "lcov"
        ],
        "watchPathIgnorePatterns": [
            "node_modules",
            "coverage"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}

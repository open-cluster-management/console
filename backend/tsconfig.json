{
    "compilerOptions": {
        "lib": ["ES2020"],
        "module": "commonjs",
        "target": "ES2020",

        "sourceMap": false,
        "declaration": false,
        "declarationMap": false,

        "alwaysStrict": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,

        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "outDir": "./build",
        "removeComments": true
    },
    "include": ["src/**/*.ts"]
}

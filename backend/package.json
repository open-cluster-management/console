{
    "name": "console-backend",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "build": "npm run clean && tsc --sourceMap false --declaration false",
        "clean": "rm -rf coverage build",
        "test": "jest --verbose",
        "test:update": "npm test -- -u",
        "lint": "eslint src test --ext .ts --max-warnings=0",
        "lint:fix": "eslint src test --ext .ts --fix",
        "check": "prettier --check **/*.ts **/*.json !coverage/** !build/** !**/package-lock.json",
        "check:fix": "prettier --write **/*.ts **/*.json !coverage/** !build/** !**/package-lock.json",
        "prestart": "./setup.sh",
        "start": "PORT=4000 NODE_ENV=development LOG_LEVEL=trace ts-node-dev --no-notify --no-deps --respawn --transpile-only src/main.ts | pino-zen --ignore instance,time",
        "generate": "GENERATE=true LOG_LEVEL=silent ts-node src/main.ts",
        "update": "rm -rf package-lock.json node_modules && npx npm-check-updates -u && npm install && npm audit fix && npm dedup && npm test && npm run lint && npm run check",
        "generate-certs": "mkdir -p certs && openssl req -subj '/C=US' -new -newkey rsa:2048 -sha256 -days 365 -nodes -x509 -keyout certs/tls.key -out certs/tls.crt"
    },
    "dependencies": {
        "@kubernetes/client-node": "^0.13.0",
        "@types/yamljs": "^0.2.31",
        "axios": "^0.21.0",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.12.2",
        "dotenv": "^8.2.0",
        "fastify": "^3.7.0",
        "fastify-compress": "^3.4.0",
        "fastify-cookie": "^4.1.0",
        "fastify-cors": "^4.1.0",
        "fastify-etag": "^1.0.0",
        "fastify-helmet": "^5.0.3",
        "fastify-https-redirect": "^1.0.3",
        "fastify-oauth2": "^4.2.1",
        "fastify-static": "^3.3.0",
        "graphql": "^15.4.0",
        "mercurius": "^6.4.0",
        "pino": "^6.7.0",
        "reflect-metadata": "^0.1.13",
        "type-graphql": "^1.1.1",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@types/eslint": "^7.2.4",
        "@types/eslint-config-prettier": "^6.11.0",
        "@types/eslint-plugin-prettier": "^3.1.0",
        "@types/jest": "^26.0.15",
        "@types/node": "^14.x.x",
        "@types/pino": "^6.3.3",
        "@types/prettier": "^2.1.5",
        "@typescript-eslint/eslint-plugin": "^4.6.1",
        "@typescript-eslint/parser": "^4.6.1",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "graphql-playground-react": "^1.7.27",
        "graphql-tag": "^2.11.0",
        "jest": "^26.x.x",
        "nock": "^13.0.4",
        "pino-zen": "^1.0.20",
        "prettier": "^2.1.2",
        "ts-jest": "^26.x.x",
        "ts-node": "^9.0.0",
        "ts-node-dev": "^1.0.0",
        "typescript": "^4.0.5"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "collectCoverage": true,
        "coverageThreshold": {
            "global": {
                "statements": 80,
                "branches": 40,
                "functions": 50,
                "lines": 70
            }
        },
        "coverageReporters": [
            "text",
            "text-summary",
            "html",
            "lcov"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!**/node_modules/**",
            "!<rootDir>/src/typings.d.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "setupFiles": [
            "<rootDir>/test/jest-setup.ts"
        ],
        "watchPathIgnorePatterns": [
            "coverage"
        ]
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module",
            "project": [
                "./tsconfig.json",
                "./test/tsconfig.json"
            ]
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "prettier/@typescript-eslint",
            "plugin:prettier/recommended"
        ],
        "rules": {
            "@typescript-eslint/no-use-before-define": "off",
            "@typescript-eslint/no-unused-vars": "off",
            "@typescript-eslint/no-floating-promises": [
                "error",
                {
                    "ignoreVoid": true
                }
            ],
            "no-console": "error",
            "no-process-exit": "error"
        }
    }
}
